@using mvc_project.Models


@{
    var user = ViewBag.User;
}





<div style="width: 1200px;">
  <form style="width: 98%;" action="Car/AddNewCar">
    <div style = "width: 98%;display: flex;">
      <input style = "width: 19%;margin: 0.5%;" type="text" id="VIN" name="VIN" maxlength="17" placeholder = "VIN"><br><br>
